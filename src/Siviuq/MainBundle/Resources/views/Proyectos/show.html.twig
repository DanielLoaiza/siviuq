{% extends '::base.html.twig' %}

{% block body -%}
    <h3 class="titulos">Proyectos</h3>
	<br><br>
    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Numero Proyecto</th>
                <td>{{ entity.numeroProyecto }}</td>
            </tr>
            <tr>
                <th>Titulo</th>
                <td>{{ entity.titulo }}</td>
            </tr>
            <tr>
                <th>Gasto Efectivo</th>
                <td>{{ entity.gastoEfectivo }}</td>
            </tr>
            <tr>
                <th>Duracion</th>
                <td>{{ entity.duracion }}</td>
            </tr>
            <tr>
                <th>Fecha Inicio</th>
                <td>{{ entity.fechaInicio|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Fecha Fin</th>
                <td>{{ entity.fechaFin|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Horas Investigadorprincipal</th>
                <td>{{ entity.horasInvestigadorPrincipal }}</td>
            </tr>
            <tr>
                <th>Horas Coinvestigadores</th>
                <td>{{ entity.horasCoinvestigadores }}</td>
            </tr>
            <tr>
                <th>Estado Informe</th>
                <td>{{ entity.estadoInforme }}</td>
            </tr>
        </tbody>
    </table>
    <div class="botoncrear">
		<button type="button" onClick=" window.location.href='{{ path('proyectos') }}' "> Regresar</button>
		
	</div>
    <div class="botoncrear">
	
		<button type="button" onClick=" window.location.href='{{ path('proyectos_edit', { 'id': entity.id }) }}'"> Editar Proyecto</button>
	</div>
    {{ form(delete_form) }}

{% endblock %}
