{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Convocatoria</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ entity.nombre }}</td>
            </tr>
            <tr>
                <th>Fechainicia</th>
                <td>{{ entity.fechaInicia|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Fechafin</th>
                <td>{{ entity.fechaFin|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Estado</th>
                <td>{{ entity.estado }}</td>
            </tr>
        </tbody>
    </table>
    
      <table class="records_list">
        <thead>
            <tr>
                <th>Titulo</th>
                <th>Grupo de Investigaci贸n</th>
                <th>Linea de investigaci贸n</th>
